<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post" class="">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="Article title" autocomplete="off">
  </div>

  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" placeholder="Type your article here"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="publishButton">Publish</button>

</form>
<%- include('partials/footer'); -%>
